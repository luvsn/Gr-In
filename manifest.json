{
    "name": "Gr-In",
    "version": "0.3",
    "description": "Ecological footprint for online shopping",
    "manifest_version": 3,
    "permissions": ["scripting", "tabs"],
    "host_permissions": [
      "https://*.amazon.de/*",
      "https://*.amazon.fr/*",
      "https://*.amazon.com/*",
      "https://auchandrive.lu/*"
    ],
    "author": "Nima GOZALPOUR, Adrien GEETS, Lucas VISINTIN, Hugo KOLANDER",
    "action":{
        "default_popup": "default.html",
        "default_title": "Gr-In",
        "default_icon": {
          "38": "icons/default.png"
       }
    

    },
    "background":{
      "service_worker": "scripts/background.js"
    },


    "content_scripts":[
        {
          "js": ["scripts/extraction-amazon.js", "scripts/extraction-auchan.js", "scripts/content.js"],
          "css": [ "style.css" ],
          "matches": [
            "https://*.amazon.de/*",
            "https://*.amazon.fr/*",
            "https://*.amazon.com/*",
            "https://auchandrive.lu/*"
          ]
        }
    ],

    "web_accessible_resources": [
      {
        "resources": ["icons/*.png"],
        "matches": [
          "https://*.amazon.de/*",
          "https://*.amazon.fr/*",
          "https://*.amazon.com/*",
          "https://auchandrive.lu/*"
        ]
      }
    ]
    
}